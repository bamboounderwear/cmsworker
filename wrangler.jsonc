{
  "name": "lightweight-cms",
  "main": "src/index.ts",
  "compatibility_date": "2024-09-23",

  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "my-cms-db",
      "database_id": "YOUR_D1_ID_HERE"
    }
  ],

  "r2_buckets": [
    {
      "binding": "MEDIA_BUCKET",
      "bucket_name": "my-cms-media"
    }
  ],

  "assets": {
    "directory": "./public",
    "binding": "ASSETS"
  }
}
